extends ../layout

block content

    //script(type='text/javascript', src='/javascript/nic-edit.js')
    //script(type='text/javascript').
    //    bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });


    br
    div.container
        div.row
            div.form.form-inline
                a.btn.btn-lg(href='/admin')
                    i.fa.fa-chevron-left
                h2='Editing home page for ' + course
    hr
    div.container
        div.row
            form(method='POST' action='home/preview')
                button.btn.btn-success(type='submit') Preview Changes

                div.form-group
                    label(for='main_header') Main Header:
                    input#main_header.form-control(type='text', value=home_updates.main_header, name='main_header')

                div.form-group
                    label(for='main_text') Main Text:
                    textarea#main_text.form-control(rows=15, name='main_text',style="width: 750px;")=home_updates.main_text

                div.form-group
                    label(for='header2') Header 2:
                    input#header2.form-control(type='text', value=home_updates.header2, name='header2')

                div.form-group
                    label(for='text2') Text 2:
                    textarea#text2.form-control(rows=15, name='text2',style="width: 750px;")=home_updates.text2

                div.form-group
                    label(for='header3') Header 3:
                    input#header3.form-control(type='text', value=home_updates.header3, name='header3')

                div.form-group
                    label(for='text3') Text 3:
                    textarea#text3.form-control(rows=15, name='text3',style="width: 750px;")=home_updates.text3

                div.form-group
                    label Post Test Open?
                    label(for='post_test_open_true') Yes
                    input#post_test_open_true.form-control(type='radio', value='true', checked=home_updates.post_test=='true', name='post_test')
                    label(for='post_test_open_false') No
                    input#post_test_open_false.form-control(type='radio', value='false', checked=home_updates.post_test=='false', name='post_test')

                div.form-group
                    label(for='post_test_link') Post Test URL:
                    textarea#post_test_link.form-control(rows=3, name='post_test_link',style="width: 750px;")=home_updates.post_test_link

                button.btn.btn-success(type='submit') Preview Changes
        hr
        div.row
            h2='Home Page Videos'
        div.row
            form(method='GET',action='home/videos/add',target="_blank")
                button.btn.btn-dark(type='submit') Add Video
        div.row
            table
                for video in home_vids
                    tr
                        td
                            div.onexys_video
                                a.colorbox(href=video.video_src)
                                    if video.video_img
                                        img.onexys_thumbnail(src=video.video_img)
                                    else
                                        img.onexys_thumbnail(src='https://conex.herokuapp.com/images/lifeAtYale/lifeAtYaleC.png', alt='')
                                    img.onexys_playbutton(src='https://conex.herokuapp.com/images/icons/playbutton.png', alt='')
                            p
                            span(style='font-size: 12pt;')
                                strong!=video.video_desc
                            br
                            br
                        td
                            div.form.form-inline
                                form(method='GET' action='home/videos/edit/'+video._id)
                                    button.btn.btn-dark(type='submit') Edit
                                form(method='POST' action='home/videos/delete/'+video._id, onsubmit="return confirm('Do you really want to delete this video?');")
                                    button.btn.btn-danger(type='submit') Delete
