extends ../layout

block content

    br
    div.container
        div.row
            div.form.form-inline
                a.btn.btn-lg(href='/admin?course-id='+course_id+'&course-title='+course_title+'&user-id='+user_id)
                    i.fa.fa-chevron-left
                h2='Confirm changes for ' + course_title + '?'
    hr

    div(class='badge_container completed')
      .badge_descriptor.badge_box
        h3=badge.title
        p=badge.description
      .badge_points.badge_box
        p=badge.badge_points
      .badge_portrait(style='background-image: url(https://'+heroku_app+'.herokuapp.com/images/badgePics/'+badge.earned_hover_url+')')
      .badge_portrait.front_portrait(style='background-image: url(https://'+heroku_app+'.herokuapp.com/images/badgePics/'+badge.earned_url+')')
      .badge_label.badge_box
        h3=badge.portrait
        p=badge.portraitdescription

    div(class='badge_container')
      .badge_descriptor.badge_box
        h3=badge.title
        p=badge.description
      .badge_points.badge_box
        p=badge.badge_points
      .badge_portrait(style='background-image: url(https://'+heroku_app+'.herokuapp.com/images/badgePics/'+badge.unearned_url+')')
      .badge_label.badge_box
        h3=badge.portrait
        p=badge.portraitdescription

    form(method='POST', action='/admin/badges/edit/'+badge.badge_id)

        input(type='hidden', value=course_id, name='course-id')
        input(type='hidden', value=course_title, name='course-title')
        input(type='hidden', value=user_id, name='user-id')

        input#title(type='hidden', value=badge.Title, name='title')
        input#description(type='hidden', value=badge.description, name='description')
        input#badge_points(type='hidden', value=badge.badge_points, name='badge_points')

        input#portrait(type='hidden', value=badge.portrait, name='portrait')
        input#portraitdescription(type='hidden', value=badge.portraitdescription name='portraitdescription')

        input#unearned_url(type='hidden', value=badge.unearned_url, name='unearned_url')
        input#earned_url(type='hidden', value=badge.earned_url, name='earned_url')
        input#earned_hover_url(type='hidden', value=badge.earned_hover_url, name='earned_hover_url')


        button.btn.btn-danger(type='submit') Back to Edits

    form(method='POST' action='/admin/badges/confirmUpdates')

        input(type='hidden', value=course_id, name='course-id')
        input(type='hidden', value=course_title, name='course-title')
        input(type='hidden', value=user_id, name='user-id')

        input#title(type='hidden', value=badge.Title, name='title')
        input#description(type='hidden', value=badge.description, name='description')
        input#badge_points(type='hidden', value=badge.badge_points, name='badge_points')

        input#portrait(type='hidden', value=badge.portrait, name='portrait')
        input#portraitdescription(type='hidden', value=badge.portraitdescription name='portraitdescription')

        input#unearned_url(type='hidden', value=badge.unearned_url, name='unearned_url')
        input#earned_url(type='hidden', value=badge.earned_url, name='earned_url')
        input#earned_hover_url(type='hidden', value=badge.earned_hover_url, name='earned_hover_url')


        button.btn.btn-success(type='submit') Save Changes
