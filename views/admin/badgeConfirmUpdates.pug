extends ../layout

block content

    br
    div.container
        div.row
            div.form.form-inline
                a.btn.btn-lg(href='/admin?course-id='+course_id+'&course-title='+course_title+'&user-id='+user_id)
                    i.fa.fa-chevron-left
                h2='Confirm changes for ' + course_title + '?'
    hr

    .user_content(style='margin-top: 0px !important;')
    .onexys_styling.o_hompage
        .left(style='width: 500px !important; margin-top: -10px;')
            #updates.standard_home_box.left(style='width: 450px !important; margin-top: 23px !important;')
                h2 Updates
                .entry.clear
                    p.entry_header
                        strong!=home_updates.main_header
                    p.entry_text!=home_updates.main_text
                .entry.clear
                    p.entry_header!=home_updates.header2
                    p.entry_text!=home_updates.text2
                .entry.clear
                    p.entry_header!=home_updates.header3
                    p.entry_text!=home_updates.text3

    form(method='POST', action='/admin/badges/edit/'+badge.badge-id)

        input(type='hidden', value=course_id, name='course-id')
        input(type='hidden', value=course_title, name='course-title')
        input(type='hidden', value=user_id, name='user-id')

        input#title(type='hidden', value=badge.Title, name='title')
        input#description(type='hidden', value=badge.Description, name='description')
        input#badge_points(type='hidden', value=badge.Points, name='badge_points')

        input#portrait(type='hidden', value=badge.Portrait, name='portrait')
        input#portraitdescription(type='hidden', value=badge.PortraitDescription name='portraitdescription')

        input#unearned_url(type='hidden', value=badge.UnearnedURL, name='unearned_url')
        input#earned_url(type='hidden', value=badge.EarnedURL, name='earned_url')
        input#earned_hover_url(type='hidden', value=badge.EarnedHoverURL, name='earned_hover_url')


        button.btn.btn-danger(type='submit') Back to Edits

    form(method='POST' action='/admin/badges/confirmUpdates')

        input(type='hidden', value=course_id, name='course-id')
        input(type='hidden', value=course_title, name='course-title')
        input(type='hidden', value=user_id, name='user-id')

        input#title(type='hidden', value=badge.Title, name='title')
        input#description(type='hidden', value=badge.Description, name='description')
        input#badge_points(type='hidden', value=badge.Points, name='badge_points')

        input#portrait(type='hidden', value=badge.Portrait, name='portrait')
        input#portraitdescription(type='hidden', value=badge.PortraitDescription name='portraitdescription')

        input#unearned_url(type='hidden', value=badge.UnearnedURL, name='unearned_url')
        input#earned_url(type='hidden', value=badge.EarnedURL, name='earned_url')
        input#earned_hover_url(type='hidden', value=badge.EarnedHoverURL, name='earned_hover_url')


        button.btn.btn-success(type='submit') Save Changes
