extends ../layout

block content

    br
    div.container
        div.row
            div.form.form-inline
                a.btn.btn-lg(href='/admin/lucky?course-id='+course_id+'&course-title='+course_title+'&user-id='+user_id)
                    i.fa.fa-chevron-left
                h2='Editing ' + course + ': Lucky Bonus ' + id
    hr

    div.container
        div.row
            form(method='POST' action='' onsubmit="return confirm('Do you really want to submit your changes?');")
                input(type='hidden', value=course_id, name='course-id')
                input(type='hidden', value=course_title, name='course-title')
                input(type='hidden', value=user_id, name='user-id')
                
                div.form-group.form-inline
                    label(for='badge_points') Date and Time of Lucky Bulldog:
                    input#badge_points.form-control(type='datetime-local', value=lucky_bonus.time, name='date_time')
                hr

                button.btn.btn-success(type='submit') Save Changes
