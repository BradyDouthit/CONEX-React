extends ../layout

block content

    a(href='/admin/lucky') Back to Lucky Page

    h1='Edit Lucky Bulldog '+lucky_bulldog._id

    form(method='POST' action='' onsubmit="return confirm('Do you really want to submit your changes?');")

        div.form-group
            label(for='badge_points') Date and Time of Lucky Bulldog: 
            input#badge_points.form-control(type='datetime-local', value=lucky_bulldog.time, name='date_time')
            br
            br

        button.btn.btn-primary(type='submit') Save Changes