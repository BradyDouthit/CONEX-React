extends layout

block content

  .onexys_styling
    .standard_title_box.badge_title.title_mod.left
      p All my sweet
      h1 Badges
    .badge_title_text.left
      p
        strong Badges are awarded for excellent work throughout the course.
      p
        | Collect them all to earn points for your team and to see some wacky pix of UVAâ€™s faculty!
    #what_are
      p So, what are badges?
      #badgeline
    .clear
    #badge_display

      each badge, index in badges

        if badge.Awarded
          div(class='badge_container badge'+(index+1)+' completed')
            .badge_descriptor.badge_box
              h3=badge.Title
              p=badge.Description
            .badge_points.badge_box
              p=badge.Points
            .badge_portrait(unearned_url=badge.UnearnedURL earned_url=badge.EarnedURL earned_hover_url=badge.EarnedHoverURL)
            .badge_label.badge_box
              h3=badge.Portrait
              p=badge.PortraitDescription

        else
          div(class='badge_container badge'+(index+1))
            .badge_descriptor.badge_box
              h3=badge.Title
              p=badge.Description
            .badge_points.badge_box
              p=badge.Points
            .badge_portrait(unearned_url=badge.UnearnedURL earned_url=badge.EarnedURL earned_hover_url=badge.EarnedHoverURL)
            .badge_label.badge_box
              h3=badge.Portrait
              p=badge.PortraitDescription
